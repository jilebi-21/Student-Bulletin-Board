<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:colorBackground">@color/surface_color</item>
        <item name="android:statusBarColor">@color/surface_color</item>
        <item name="android:navigationBarColor">@color/surface_color</item>
        <item name="android:windowLightStatusBar">@bool/is_light</item>
    </style>

    <style name="BaseTheme" parent="Base" />

    <style name="BaseTheme.LoginTheme">
        <item name="textInputStyle">@style/TextInputLayout.Rounded</item>
    </style>

    <style name="BaseTheme.Settings">
        <item name="navigationIcon">@drawable/ic_chevron_left</item>
    </style>

    <style name="BaseTheme.News">
        <item name="popupMenuBackground">@drawable/popup_background</item>
    </style>
</resources>